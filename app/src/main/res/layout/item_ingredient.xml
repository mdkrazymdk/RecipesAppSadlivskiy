<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/main_margin_half"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIngredientsDescription"
        style="@style/StyleIngredientsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="творог" />

    <TextView
        android:id="@+id/tvIngredientsQuantity"
        style="@style/StyleIngredientsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tvIngredientsUnitOfMeasure"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="350" />

    <TextView
        android:id="@+id/tvIngredientsUnitOfMeasure"
        style="@style/StyleIngredientsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="шт" />
</androidx.constraintlayout.widget.ConstraintLayout>

