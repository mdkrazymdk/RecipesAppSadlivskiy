<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCategoryItem"
    style="@style/ClickEffect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_margin_half"
    android:layout_marginTop="@dimen/main_margin"
    android:clickable="true"
    app:cardCornerRadius="@dimen/corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="@string/content_description_categories_cards"
            android:scaleType="centerCrop"
            android:src="@drawable/dessert" />

        <TextView
            android:id="@+id/tvCategoryName"
            style="@style/StyleCategoriesCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin_half"
            tools:text="Desserts" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleCategoriesCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_margin_half"
            android:layout_marginBottom="@dimen/main_margin_half"
            tools:text="Самые вкусные рецепты десертов специально для вас" />
    </LinearLayout>
</androidx.cardview.widget.CardView>