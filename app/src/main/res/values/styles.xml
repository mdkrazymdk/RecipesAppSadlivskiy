<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tittle_text_size</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StilePortionsCount">
        <item name="android:textSize">@dimen/tittle_portions_text_size</item>
        <item name="fontFamily">@font/montserrat_semibold</item>

    </style>

    <style name="StyleIngredientsText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tittle_text_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/cardDescriptionColor</item>
    </style>

    <style name="StyleMethodsText" parent="StyleIngredientsText">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="StyleCategoriesCardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/categoryTitleColor</item>
    </style>

    <style name="StyleCategoriesCardDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/cardDescriptionColor</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/categoryTitleColor</item>
    </style>

    <style name="ClickEffect">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="StyleSeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>
</resources>
